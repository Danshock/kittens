<div class="center">
<%= link_to "Add new kitten", new_path, class: "btn btn-primary" %>


<h2>All kittens</h2>

<% @kittens.each do |kitten| %>
  <ul class="list-group">
  	<li class="list-group-item">
  		<%= link_to kitten.name, kitten %><br/>
  		<%= link_to "Edit", edit_kitten_path(kitten[:id]) %> | 
  		<%= link_to "Delete", kitten, method: :delete, data: { confirm: "Are you sure?" } %>
  		</li>
<% end %>
 </ul>
</div>